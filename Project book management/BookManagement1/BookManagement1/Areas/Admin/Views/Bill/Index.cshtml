@using PagedList;
@using PagedList.Mvc;
@using BookManagement1.Models;
@model PagedList.IPagedList<BillOrder>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Bill page
}

<div class="row">
    <div class="col-lg-10">
        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
            Actions
            <span class="caret"></span>
        </button>
    </div>
    <div class="col-lg-2">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                All bill
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Customer.CustomerID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Customer.CustomerName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Shipdate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().OrderDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().PayDay)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().BillOrderMoneyTotal)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().PaidStatus)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Customer.CustomerID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Customer.CustomerName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Shipdate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PayDay)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BillOrderMoneyTotal)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PaidStatus)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.BillOrderID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.BillOrderID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.BillOrderID })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
    </div>
</div>