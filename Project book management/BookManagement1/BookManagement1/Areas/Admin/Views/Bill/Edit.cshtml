@model BookManagement1.Models.BillOrder

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Bill page edit
}
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Update Bill
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @Html.ValidationSummary(true)
                        @using (Html.BeginForm("Edit","BillOrder",FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.BillOrderID)

                            <div class="form-group">
                                @Html.LabelFor(model => model.CustormerRefId)
                                @Html.DropDownList("CustormerRefId", String.Empty)
                                @Html.ValidationMessageFor(model => model.CustormerRefId)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Shipdate)
                                @Html.TextBoxFor(model => model.Shipdate, new { @class = "form-control", @placeholder = "Enter date ship",@type="Date" })
                                @Html.ValidationMessageFor(model => model.Shipdate)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.OrderDate)
                                @Html.TextBoxFor(model => model.OrderDate, new { @class = "form-control", @placeholder = "Enter date order", @type = "Date" })
                                @Html.ValidationMessageFor(model => model.OrderDate)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.PayDay)
                                @Html.TextBoxFor(model => model.PayDay, new { @class = "form-control", @placeholder = "Enter date pay", @type="Date" })
                                @Html.ValidationMessageFor(model => model.PayDay)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.BillOrderMoneyTotal)
                                @Html.TextBoxFor(model => model.BillOrderMoneyTotal, new { @class = "form-control", @placeholder = "Enter money", @type="Number" })
                                @Html.ValidationMessageFor(model => model.BillOrderMoneyTotal)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.PaidStatus)
                                @Html.TextAreaFor(model => model.PaidStatus, new { @class = "form-control", @placeholder = "Enter summary" })
                                @Html.ValidationMessageFor(model => model.PaidStatus)
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                            </div>
                        }
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
