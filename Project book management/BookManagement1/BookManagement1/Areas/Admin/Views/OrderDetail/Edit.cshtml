@model BookManagement1.Models.OrderDetail

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Detail order edit
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>OrderDetail</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.OrderDetailID)

        <div class="form-group">
            @Html.LabelFor(model => model.BillOrderRefId, "BillOrderRefId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("BillOrderRefId", String.Empty)
                @Html.ValidationMessageFor(model => model.BillOrderRefId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BookRefId, "BookRefId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("BookRefId", String.Empty)
                @Html.ValidationMessageFor(model => model.BookRefId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantity, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantity)
                @Html.ValidationMessageFor(model => model.Quantity)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
