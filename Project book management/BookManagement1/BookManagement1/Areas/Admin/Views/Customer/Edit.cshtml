@model BookManagement1.Models.Customer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Customer page edit
}
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Update Customer
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.LabelFor(model => model.CustomerName)
                                @Html.TextBoxFor(model => model.CustomerName, new { @class = "form-control", @placeholder = "Name", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.CustomerName)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.CustomerBirthday)
                                @Html.TextBoxFor(model => model.CustomerBirthday, new { @class = "form-control", @placeholder = "Brithday", @type = "Date" })
                                @Html.ValidationMessageFor(model => model.CustomerBirthday)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.CustomerGender)
                                @Html.DropDownListFor(model => model.CustomerGender, new SelectList(new[] { "Male", "Female", "Other" }))

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.CustomerEmail)
                                @Html.TextBoxFor(model => model.CustomerEmail, new { @class = "form-control", @placeholder = "Email" })
                                @Html.ValidationMessageFor(model => model.CustomerEmail)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.CustomerPhone)
                                @Html.TextBoxFor(model => model.CustomerPhone, new { @class = "form-control", @placeholder = "Phone", @type = "Number" })
                                @Html.ValidationMessageFor(model => model.CustomerPhone)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.CustomerAddress)
                                @Html.TextBoxFor(model => model.CustomerAddress, new { @class = "form-control", @placeholder = "Address" })
                                @Html.ValidationMessageFor(model => model.CustomerAddress)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.CustomerAccount)
                                @Html.TextBoxFor(model => model.CustomerAccount, new { @class = "form-control", @placeholder = "Account" })
                                @Html.ValidationMessageFor(model => model.CustomerAccount)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.CustomerPass)
                                @Html.TextBoxFor(model => model.CustomerPass, new { @class = "form-control", @placeholder = "Password", @type = "Password" })
                                @Html.ValidationMessageFor(model => model.CustomerPass)
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>
                        }

                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
