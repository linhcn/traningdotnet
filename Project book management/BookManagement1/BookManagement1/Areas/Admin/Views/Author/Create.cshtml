@model BookManagement1.Models.Author

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Author page add
}
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Create product
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @Html.ValidationSummary(true)
                        @using (Html.BeginForm("Create","Author",FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.AuthorID)
                            <div class="form-group">
                                @Html.LabelFor(model => model.AuthorName,"Author name")
                                @Html.TextBoxFor(model => model.AuthorName, new { @class = "form-control", @placeholder = "Name", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.AuthorName)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.AuthorAddress,"Address")
                                @Html.TextBoxFor(model => model.AuthorAddress, new { @class = "form-control", @placeholder = "Enter Address" })
                                @Html.ValidationMessageFor(model => model.AuthorAddress)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.AuthorPhone,"Phone")
                                @Html.TextBoxFor(model => model.AuthorPhone, new { @class = "form-control", @placeholder = "Enter Phone", @type = "Number" })
                                @Html.ValidationMessageFor(model => model.AuthorPhone)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.AuthorSummary,"Summary")
                                @Html.TextAreaFor(model => model.AuthorSummary, new { @class = "form-control", @placeholder = "Enter summary" })
                                @Html.ValidationMessageFor(model => model.AuthorSummary)
                            </div>
                            <div class="form-group">
                                 <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                            </div>
                        }
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
