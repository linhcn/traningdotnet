@using PagedList;
@using PagedList.Mvc;
@using BookManagement1.Models;
@model PagedList.IPagedList<Author>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Author page
}
    
<div class="row">
    <div class="col-lg-10">
        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
            Actions
            <span class="caret"></span>
        </button>
    </div>
    <div class="col-lg-2">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                All books
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().AuthorName)
                                </th>                                   
                                <th>
                                    @Html.DisplayNameFor(model => model.First().AuthorAddress)
                                </th>                                  
                                <th>
                                    @Html.DisplayNameFor(model => model.First().AuthorPhone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().AuthorSummary)
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AuthorName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AuthorAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AuthorPhone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AuthorSummary)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.AuthorID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.AuthorID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.AuthorID })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page}))
                </div>
            </div>
        </div>
    </div>
</div>