@model BookManagement1.Models.Author

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Author page edit
}
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Create product
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm())
                        {
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.AuthorID)
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.LabelFor(model => model.AuthorName)
                                @Html.TextBoxFor(model => model.AuthorName, new { @class = "form-control", @placeholder = "Name", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.AuthorName)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.AuthorAddress)
                                @Html.TextBoxFor(model => model.AuthorAddress, new { @class = "form-control", @placeholder = "Enter Address"})
                                @Html.ValidationMessageFor(model => model.AuthorAddress)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.AuthorPhone)
                                @Html.TextBoxFor(model => model.AuthorPhone, new { @class = "form-control", @placeholder = "Enter Phone", @type = "Number" })
                                @Html.ValidationMessageFor(model => model.AuthorPhone)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.AuthorSummary)
                                @Html.TextAreaFor(model => model.AuthorSummary, new { @class = "form-control", @placeholder = "Enter" })
                                @Html.ValidationMessageFor(model => model.AuthorSummary)
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg">Submit Button</button> 
                        }
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
