@model BookManagement1.Models.Book

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Home page
}
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Edit book
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("Edit", "Book", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.BookID)
                            <div class="form-group">
                                @Html.LabelFor(model => model.BookName)
                                @Html.TextBoxFor(model => model.BookName, new { @class = "form-control", @placeholder = "Name", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.BookName)
                            </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.BookPrices)
                                    @Html.TextBoxFor(model => model.BookPrices, new { @class = "form-control", @placeholder = "Enter price", @type = "Number" })
                                    @Html.ValidationMessageFor(model => model.BookPrices)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.BookDescription)
                                    @Html.TextBoxFor(model => model.BookDescription, new { @class = "form-control", @placeholder = "Enter Description" })
                                    @Html.ValidationMessageFor(model => model.BookDescription)
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.BookDateUpdate)
                                    @Html.TextBoxFor(model => model.BookDateUpdate, new { @class = "form-control", @placeholder = "Enter Date Update", @type = "Date" })
                                    @Html.ValidationMessageFor(model => model.BookDateUpdate)
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.BookQuantity)
                                    @Html.TextBoxFor(model => model.BookQuantity, new { @class = "form-control", @placeholder = "Enter Quantity", @type = "Number" })
                                    @Html.ValidationMessageFor(model => model.BookQuantity)
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.BookDiscount)
                                    @Html.TextBoxFor(model => model.BookDiscount, new { @class = "form-control", @placeholder = "Enter discount %", @type = "Number" })
                                    @Html.ValidationMessageFor(model => model.BookDiscount)
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.TopicRefId, "Id topic")
                                    @Html.DropDownList("TopicRefId", String.Empty)
                                    @Html.ValidationMessageFor(model => model.TopicRefId)
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.ProductionRefId, "Id production")
                                    @Html.DropDownList("ProductionRefId", String.Empty)
                                    @Html.ValidationMessageFor(model => model.ProductionRefId)
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.AuthorRefId, "Id author")
                                    @Html.DropDownList("AuthorRefId", String.Empty)
                                    @Html.ValidationMessageFor(model => model.AuthorRefId)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Categolorys, "Categolory")
                                    @*@Html.ListBox("List Categolorys", (IEnumerable<SelectListItem>) ViewBag.listCategolorys)*@
                                    @Html.DropDownList("CategoloryRefID", (IEnumerable<SelectListItem>)ViewBag.CategoloryRefID)
                                    @Html.ValidationMessageFor(model => model.Categolorys)
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.BookImage, new { type = "file" })
                                    @Html.ValidationMessageFor(model => model.BookImage)
                                </div>
                                <button type="submit" class="btn btn-primary btn-lg">Submit Button</button>
                        }
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
