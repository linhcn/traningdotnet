@model BookManagement1.Areas.Admin.Models.LoginModel
@{
    ViewBag.Title = "LoginCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken();
                        @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                        <fieldset>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Username", @autofocus = "autofocus" })
                                @*<input class="form-control" placeholder="E-mail" name="email" type="email" autofocus>*@
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Password", @type = "password" })
                                @*<input class="form-control" placeholder="Password" name="password" type="password" value="">*@
                            </div>
                            <div class="checkbox">
                                <div class="row">
                                    <div class="col-lg-10">
                                        <div>
                                            <label>
                                                @Html.CheckBoxFor(model => model.Rememberme)
                                                Remember Me
                                                @*<input name="remember" type="checkbox" value="Remember Me">*@
                                            </label>
                                        </div>
                                        <div class="col-xs-offset-12">
                                            @Html.ActionLink("Register", "Register", "Client")
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <button type="submit" class="btn btn-lg btn-success btn-block">Login</button>
                            @*<a href="index.html" class="btn btn-lg btn-success btn-block">Login</a>*@
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- jQuery -->
<script src="/Content/admin/bower_components/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap Core JavaScript -->
<script src="/Content/admin/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- Metis Menu Plugin JavaScript -->
<script src="/Content/admin/bower_components/metisMenu/dist/metisMenu.min.js"></script>
<!-- Custom Theme JavaScript -->
<script src="/Content/admin/dist/js/sb-admin-2.js"></script>

